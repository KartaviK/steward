{
    "name": "lmc/steward",
    "description": "Steward - makes Selenium WebDriver + PHPUnit testing easy and robust",
    "keywords": [
        "selenium",
        "webdriver",
        "phpunit",
        "testing"
    ],
    "license": "MIT",
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Lmc\\Steward\\": "src/"
        }
    },
    "require": {
        "php": "^5.5.5 || ~7.0",
        "ext-zip": "*",
        "ext-curl": "*",
        "phpunit/phpunit": "^4.8.6 || ~5.0",
        "symfony/console": "~3.0",
        "symfony/process": "^3.0.4",
        "symfony/finder": "~3.0",
        "symfony/event-dispatcher": "^2.8 | ~3.0",
        "nette/reflection": "^2.3.2",
        "nette/utils": "~2.3",
        "facebook/webdriver": "^1.1.1",
        "clue/graph": "~0.9.0",
        "graphp/algorithms": "^0.8.1",
        "florianwolters/component-util-singleton": "0.3.2",
        "caseyamcl/configula": "~2.3",
        "doctrine/inflector": "~1.0",
        "beberlei/assert": "^2.4"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.4.1",
        "php-mock/php-mock-phpunit": "~1.0",
        "satooshi/php-coveralls": "^1.0"
    },
    "suggest": {
        "ext-posix": "For colored output",
        "ext-xdebug": "For remote tests debugging"
    },
    "bin": ["bin/steward", "bin/steward.php"]
}
